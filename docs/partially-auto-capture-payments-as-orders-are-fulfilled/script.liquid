{% if event.preview %}
  {% assign order = hash %}
  {% assign order["admin_graphql_api_id"] = "gid://shopify/Order/1234567890" %}
  {% assign order["financial_status"] = "partially_paid" %}

  {% capture preview_result_json %}
    {
      "data": {
        "order": {
          "transactions": [
            {
              "id": "gid://shopify/OrderTransaction/1234567890",
              "amountSet": {
                "presentmentMoney": {
                  "amount": "16.99",
                  "currencyCode": "USD"
                }
              }
            }
          ],
          "totalPriceSet": {
            "presentmentMoney": {
              "amount": "16.99"
            }
          },
          "subtotalPriceSet": {
            "presentmentMoney": {
              "amount": "10.0"
            }
          },
          "totalCapturableSet": {
            "presentmentMoney": {
              "amount": "16.54"
            }
          },
          "fulfillments": [
            {
              "name": "#1234-F1",
              "fulfillmentLineItems": {
                "pageInfo": {
                  "hasNextPage": false
                },
                "edges": [
                  {
                    "node": {
                      "discountedTotalSet": {
                        "presentmentMoney": {
                          "amount": "5.0"
                        }
                      }
                    }
                  }
                ]
              }
            }
          ]
        }
      }
    }
  {% endcapture %}
{% endif %}

{% if order.financial_status != "authorized" and order.financial_status != "partially_paid" %}
  {% log "Order is not either authorized or partially_paid." %}
{% else %}
  {% capture query %}
    query {
      order(id: {{ order.admin_graphql_api_id | json }}) {
        transactions(capturable: true) {
          id
          amountSet {
            presentmentMoney {
              amount
              currencyCode
            }
          }
        }
        totalPriceSet {
          presentmentMoney {
            amount
          }
        }
        subtotalPriceSet {
          presentmentMoney {
            amount
          }
        }
        totalCapturableSet {
          presentmentMoney {
            amount
          }
        }
        fulfillments {
          name
          fulfillmentLineItems(first: 250) {
            pageInfo {
              hasNextPage
            }
            edges {
              node {
                discountedTotalSet {
                  presentmentMoney {
                    amount
                  }
                }
              }
            }
          }
        }
      }
    }
  {% endcapture %}

  {% assign result = query | shopify %}

  {% if event.preview %}
    {% assign result = preview_result_json | parse_json %}
  {% endif %}

  {% assign total = result.data.order.totalPriceSet.presentmentMoney.amount | times: 1.0 %}
  {% assign total_captured = total | minus: result.data.order.totalCapturableSet.presentmentMoney.amount %}
  {% assign subtotal = result.data.order.subtotalPriceSet.presentmentMoney.amount | times: 1.0 %}
  {% assign subtotal_fulfilled = 0.0 %}

  {% for fulfillment in result.data.order.fulfillments %}
    {% if fulfillment.fulfillmentLineItems.pageInfo.hasNextPage %}
      {% error "This order has a fulfillment with more than 250 line items in it. This is not supported by this task." %}
      {% break %}
    {% endif %}

    {% for fulfillment_line_item_edge in fulfillment.fulfillmentLineItems.edges %}
      {% assign subtotal_fulfilled = subtotal_fulfilled | plus: fulfillment_line_item_edge.node.discountedTotalSet.presentmentMoney.amount %}
    {% endfor %}
  {% endfor %}

  {% assign desired_total_captured = subtotal_fulfilled | divided_by: subtotal | times: total %}
  {% assign amount_to_capture = desired_total_captured | minus: total_captured | times: 100 | round | divided_by: 100.0 %}
  {% assign parent_transaction = result.data.order.transactions.first %}

  {% log
    total: total,
    total_captured: total_captured,
    subtotal: subtotal,
    subtotal_fulfilled: subtotal_fulfilled,
    desired_total_captured: desired_total_captured,
    amount_to_capture: amount_to_capture,
    parent_transaction: parent_transaction
  %}

  {% if result.data.order.capturable == false %}
    {% log "This order is not capturable." %}
  {% elsif amount_to_capture == 0 %}
    {% log "Nothing to capture at this time." %}
  {% else %}
    {% action "shopify" %}
      mutation {
        orderCapture(
          input: {
            id: {{ order.admin_graphql_api_id | json }}
            parentTransactionId: {{ parent_transaction.id | json }}
            amount: {{ amount_to_capture | append: "" | json }}
            currency: {{ parent_transaction.amountSet.presentmentMoney.currencyCode }}
          }
        ) {
          transaction {
            id
            status
          }
          userErrors {
            field
            message
          }
        }
      }
    {% endaction %}
  {% endif %}

  {% log result %}
{% endif %}
